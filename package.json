{
  "name": "autoagent",
  "version": "1.0.0",
  "description": "Extension Chrome pour créer des tâches récurrentes dans Perplexity Comet",
  "main": "background.js",
  "scripts": {
    "build": "echo 'Extension prête pour le chargement manuel'",
    "test": "playwright test --config=tests/playwright.config.js",
    "test:extension": "node test-extension.js",
    "test:extension:debug": "node test-extension.js --debug",
    "test:ui": "playwright test --ui --config=tests/playwright.config.js",
    "test:headed": "playwright test --headed --config=tests/playwright.config.js",
    "test:debug": "playwright test --debug --config=tests/playwright.config.js",
    "test:report": "playwright show-report",
    "lint": "echo 'Linting non configuré'"
  },
  "keywords": [
    "chrome-extension",
    "comet",
    "perplexity",
    "automation",
    "cron",
    "tasks"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/votre-username/autoagent.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/autoagent/issues"
  },
  "homepage": "https://github.com/votre-username/autoagent#readme",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "directories": {
    "test": "tests"
  }
}
